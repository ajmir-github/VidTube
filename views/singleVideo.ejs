<!DOCTYPE html>
<html lang="en">

  <!-- Head imports -->
  <%-include("./partials/head")%>


<body class="bg-dark text-light">
  
  <!-- navbar imports -->
  <%-include("./partials/navbar")%>


  <style>
    .vid-avator img{
      width: 42px;
      height: 42px;
      margin-right: 1rem;
    }

  </style>
  
  <div class="container-fluid my-4">
    
    
    <div class="row justify-content-center bg-dark my-4">
      <video style="max-height: 75vh;" src="/vid/<%= video.src %>" controls poster="/img/<%= video.thumbnail %>">
        <p>Your browser doesn't support HTML5 video. Here is a <a href="/vid/<%= video.src %>">link to the video</a> instead.</p>
      </video>
    </div>

    <div class="row px-4">
      <!-- Sidebar -->
      <%-include("./partials/sidebar")%>


      <div class="col-md-9 container-fluid">

        <div class="row">
          <h1><%= video.title %></h1>
          
          <a class="my-2 rounded vid-avator d-flex justify-content-start align-items-center flex-wrap btn btn-outline-danger" href="/channel/<%= video.channel._id %>">
            <img class="rounded-circle" src="/img/<%= video.channel.channelIcon || channel.channelIcon %>" alt="">
            <span style="font-size: 1.1rem;"><%= video.channel.channelName %></span>
          </a>
        </div>

        <div class="row">
          <i class="text-muted"><%= video.date.toDateString() %></i>
          <!-- <div><span class="badge bg-info">Views: <%= video.views %></span></div> -->
          <div class="my-2">
            <% video.keywords.split(",").forEach(keyword =>{ %>
              <a href="/?department=<%= keyword %>" class="btn btn-sm btn-outline-light"><%= keyword %></a>
            <% }) %>
          </div>
          <p><%= video.description %></p>
        </div>

        <div class="row">
          <% if(typeof auth !== "undefined"){ %>
            <% if(auth.signedIn && video.channel._id.toString() === auth.theChannel._id.toString()) { %>
              <div class="btn-group" role="group" aria-label="Basic example">
                
                <a href="/profile/video_edit/<%= video._id %>" class="btn fw-bold btn-sm btn-primary">Edit</a>
              </div>
            <% } %>
          <% } %>
        </div>
        

      </div>

    </div>

  </div>
  
  <!-- footer -->
  <%-include("./partials/footer")%>
  
  
</body>
</html>