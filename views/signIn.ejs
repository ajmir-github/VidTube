<!DOCTYPE html>
<html lang="en">

  <!-- Head imports -->
  <%-include("./partials/head")%>

<body class="bg-dark text-light">

  <!-- navbar imports -->
  <%-include("./partials/navbar")%>

  <div class="container pt-5 h4">
    <!-- noticeBox imports -->
    <%-include("./partials/noticeBox")%>
  </div>

  <div class="container">
    <div class="row justify-content-center">

      <form class="col-12 my-4" action="/auth/sign_in" method="post">
        <h2>Sign in</h2>

        <div class="form-floating my-3 text-dark">
          <input required type="text" class="form-control" id="username" placeholder="Enter username" name="username">
          <label for="username">Username</label>
        </div>
       
        <div class="form-floating my-3 text-dark">
          <input required type="password" class="form-control" id="password" placeholder="Enter password" name="password">
          <label for="password">Password</label>
        </div>
       
        <div class="col">
          <input type="submit" class="btn btn-outline-danger form-control" value="Sign in">
        </div>
      </form>

      <!-- sign in form -->
      <form class="col-12 my-4" action="/auth/sign_up" method="post">
        <h2>Sign Up</h2>
        <div class="form-floating my-3 text-dark">
          <input required type="text" class="form-control" id="username" placeholder="Enter username" name="username">
          <label for="username">Username</label>
        </div>
       
        <div class="form-floating my-3 text-dark">
          <input required type="password" class="form-control" id="password" placeholder="Enter password" name="password">
          <label for="password">Password</label>
        </div>
  
        <div class="form-floating my-3 text-dark">
          <input required type="text" class="form-control" id="fullName" placeholder="Enter Full name" name="fullName">
          <label for="fullName">Full name</label>
        </div>

        <div class="form-floating my-3 text-dark">
          <input required type="email" class="form-control" id="email" placeholder="Enter email" name="email">
          <label for="email">E-mail</label>
        </div>
  
        <div class="form-floating my-3 text-dark">
          <input required type="text" class="form-control" id="channelName" placeholder="Enter channel name" name="channelName">
          <label for="channelName">Channel name</label>
        </div>
  
  
        <div class="form-floating my-3 text-dark">
          <textarea class="form-control" rows="5" style="min-height: 140px;" placeholder="Describe your channel here" id="description" name="description"></textarea>
          <label for="description">Channel description</label>
        </div>

        <div class="col">
          <input type="submit" class="btn btn-outline-danger form-control" value="Sign up">
        </div>
      </form>
      <!-- end of sign in form -->
    </div>


  </div>
  
  


  <!-- footer -->
  <%-include("./partials/footer")%>

</body>
</html>